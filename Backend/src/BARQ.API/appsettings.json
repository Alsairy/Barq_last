{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BARQ_DB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "Jwt": {
    "Key": "your-super-secret-key-that-is-at-least-32-characters-long-for-barq-platform",
    "Issuer": "BARQ",
    "Audience": "BARQ-Users",
    "ExpiryMinutes": 60
  },
  "BARQ": {
    "DefaultTenant": "system",
    "EnableAuditLogging": true,
    "EnablePerformanceMetrics": true,
    "MaxFileUploadSize": 104857600,
    "SupportedFileTypes": ".pdf,.doc,.docx,.txt,.jpg,.png,.gif,.zip"
  }
}
